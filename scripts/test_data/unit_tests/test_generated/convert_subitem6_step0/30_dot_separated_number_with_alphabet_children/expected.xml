        <ParagraphSentence>
          <Sentence Num="1">取扱いの管理の実施方法</Sentence>
        </ParagraphSentence>
        <Item Num="1">
          <ItemTitle>（１）</ItemTitle>
          <ItemSentence>
            <Sentence Num="1">Itemの内容</Sentence>
          </ItemSentence>
